{
  "name": "nggorpc-e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for NgGoRPC using Playwright",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:e2e": "docker compose -f ../docker-compose.yml up -d --build && playwright test && docker compose -f ../docker-compose.yml down",
    "docker:up": "docker compose -f ../docker-compose.yml up -d --build",
    "docker:down": "docker compose -f ../docker-compose.yml down",
    "docker:logs": "docker compose -f ../docker-compose.yml logs"
  },
  "keywords": [
    "e2e",
    "playwright",
    "testing",
    "grpc",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
